<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Oportunidad__c</field>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>UsuarioAprobador__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Aprobación Descuento</label>
        <name>AprobacionDescuento</name>
    </approvalStep>
    <description>Proceso que se utiliza para aprobación de descuentos en la cotización</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Cotizacion__c.UsuarioAprobador__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Cotizacion__c.Estado__c</field>
            <operation>equals</operation>
            <value>Vigente</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ActualizaEstadoAprobado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AprobacionDescuentoCotizacion</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ActualizaEstadoAnulada</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RechazoDescuento</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>ActualizarEstadoaEnAprobacion</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EnvioCorreoAprobador</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Aprobación Descuento Cotización</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
